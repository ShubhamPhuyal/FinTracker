@page "/login"
@using FinTracker.Services.Interface
@inject NavigationManager Nav
@inject IUserService UserService

<div class="login-container">
    <div class="login-form-container">
        <h1 class="login-title">Login</h1>

        <form class="login-form" @onsubmit="HandleLogin">
            <div class="form-group">
                <label>Username</label>
                <input type="text" class="form-control" @bind="Users.Username" placeholder="Enter your username" />
            </div>

            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" @bind="Users.Password" placeholder="Enter your password" />
            </div>

            <div class="form-group">
                <label>Currency</label>
                <select class="form-control" @bind="Users.PreferredCurrency" required>
                    <option value="" disabled>Select Currency</option>
                    <option value="NPR">Select Currency</option>
                    <option value="USD">USD</option>
                    <option value="EUR">EUR</option>
                </select>
            </div>

            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="alert alert-danger">@ErrorMessage</div>
            }

            <div class="button-container">
                <button type="submit" class="login-btn">Log In</button>
            </div>
        </form>
    </div>
</div>

<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        background-color: #f9f9f9;
        padding: 2rem;
    }

    .login-form-container {
        width: 100%;
        max-width: 400px;
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: white;
    }

    .login-title {
        font-size: 1.8rem;
        font-weight: bold;
        margin-bottom: 2rem;
        text-align: center;
        color: #333;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

        .form-group label {
            font-size: 1rem;
            font-weight: 500;
            color: #333;
        }

    .form-control {
        width: 100%;
        padding: 0.8rem;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 1rem;
        margin-top: 0.5rem;
    }

        .form-control::placeholder {
            color: #aaa;
        }

        .form-control:focus {
            border-color: #333;
            outline: none;
        }

    .alert {
        color: red;
        margin-top: 1rem;
        font-size: 0.9rem;
        text-align: center;
    }

    .login-btn {
        width: 100%;
        padding: 1rem;
        background-color: #333;
        color: white;
        font-size: 1.1rem;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .login-btn:hover {
            background-color: #555;
        }
</style>
