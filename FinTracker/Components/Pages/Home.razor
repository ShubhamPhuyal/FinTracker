@page "/home"
@using FinTracker.Models
@inject GlobalState GlobalState

<style>
      

    .container {
        max-width: 800px;
        text-align: center;
    }

    h1 {
        font-size: 2.5rem;
        color: #2d3748;
        margin-bottom: 1rem;
    }

    .subtitle {
        color: #718096;
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 3rem;
    }

    .services {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-top: 2rem;
    }

    .service-card {
        background: white;
        padding: 2rem;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        transition: transform 0.2s;
    }

        .service-card:hover {
            transform: translateY(-5px);
        }

    .icon {
        width: 48px;
        height: 48px;
        margin: 0 auto 1rem;
    }

    .service-title {
        color: #2d3748;
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
    }

    .service-description {
        color: #718096;
        font-size: 0.9rem;
        line-height: 1.5;
    }
</style>

<div class="container">
    <h1>Hey, I'm<br>Shubham Phuyal</h1>
    <p class="subtitle">This is a Finance Tracker desktop application.<br>Welcome to, FinTrack</p>

    <div class="services">
        <div class="service-card">
            <div class="icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="2" y="3" width="20" height="14" rx="2" />
                    <line x1="8" y1="21" x2="16" y2="21" />
                    <line x1="12" y1="17" x2="12" y2="21" />
                </svg>
            </div>
            <h3 class="service-title">Desktop Version</h3>
            <p class="service-description">This application is mainly developed for desktops.</p>
        </div>

        <div class="service-card">
            <div class="icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="5" y="2" width="14" height="20" rx="2" />
                    <circle cx="12" cy="18" r="2" />
                </svg>
            </div>
            <h3 class="service-title">Mobile Version</h3>
            <p class="service-description">Developing FinTrack on iOS and Android will be future work.</p>
        </div>
    </div>
</div>
