@page "/logout"
@inject NavigationManager Nav
@using FinTracker.Models

<style>
    .center-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        width: 100%;
        position: relative;
        z-index: 1;
    }

    .background-circles {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 0;
        pointer-events: none;
    }

    .circle {
        position: absolute;
        border-radius: 50%;
        opacity: 0.1;
    }

    .circle-1 {
        width: 200px;
        height: 200px;
        border: 2px solid #64b5f6;
        top: 10%;
        left: 15%;
    }

    .circle-2 {
        width: 150px;
        height: 150px;
        border: 2px solid #ffd54f;
        bottom: 20%;
        right: 10%;
    }

    .circle-3 {
        width: 100px;
        height: 100px;
        border: 2px solid #81c784;
        top: 30%;
        right: 25%;
    }

    .logout-card {
        background: white;
        padding: 2.5rem;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        text-align: center;
        max-width: 400px;
        width: 90%;
        position: relative;
        z-index: 1;
    }

    .logout-icon {
        width: 48px;
        height: 48px;
        margin: 0 auto 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f0f9ff;
        border-radius: 50%;
        color: #0284c7;
    }

    h1 {
        color: #1e293b;
        font-size: 1.5rem;
        margin-bottom: 0.75rem;
    }

    p {
        color: #64748b;
        margin-bottom: 1.5rem;
        line-height: 1.5;
    }

    .sign-in-button {
        background-color: #f1f5f9;
        color: #475569;
        border: none;
        padding: 0.75rem 2rem;
        border-radius: 6px;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.2s;
        text-decoration: none;
        display: inline-block;
    }

        .sign-in-button:hover {
            background-color: #e2e8f0;
        }

    footer {
        position: fixed;
        bottom: 20px;
        color: #94a3b8;
        font-size: 0.875rem;
        z-index: 1;
    }
</style>

<div class="background-circles">
    <div class="circle circle-1"></div>
    <div class="circle circle-2"></div>
    <div class="circle circle-3"></div>
</div>

<div class="center-container">
    <div class="logout-card">
        <div class="logout-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" />
                <polyline points="16 17 21 12 16 7" />
                <line x1="21" y1="12" x2="9" y2="12" />
            </svg>
        </div>
        <h1>Are you sure you want to Logout?</h1>
        <p>Thank you for using us. We hope to see you soon!</p>
        <button class="btn btn-lg btn-secondary" @onclick="ShowLogoutConfirmation">Logout</button>
    </div>
</div>



@if (IslogOut)
{
    <div class="modal" tabindex="-1" role="dialog" style="display: block; background-color: rgba(0, 0, 0, 0.5); position: fixed; top: 0; left: 0; width: 100%; height: 100%; overflow: auto;">
        <div class="modal-dialog" role="document" style="margin-top: 20%; margin-left: auto; margin-right: auto; max-width: 400px;">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Logout</h5>
                    <button type="button" class="close" @onclick="HideLogoutConfirmation">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to logout?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideLogoutConfirmation">No</button>
                    <button type="button" class="btn btn-primary" @onclick="PerformLogout">Yes</button>
                </div>
            </div>
        </div>
    </div>
}
